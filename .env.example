# Environment variables template
# Copy this file to .env and fill in your values

# Primary API Configuration (ok.surf - free, no key required)
REACT_APP_NEWS_API_URL=https://ok.surf/api/v1/cors/news-feed

# NewsAPI.org Configuration (Optional - for German news support)
# Get your free API key at: https://newsapi.org/register
REACT_APP_NEWSAPI_KEY=

# NewsData.io Configuration (Optional - for additional German news)
# Get your free API key at: https://newsdata.io/register
REACT_APP_NEWSDATA_KEY=

# App Configuration
REACT_APP_NAME="User Unknown's News"
REACT_APP_DEFAULT_LANGUAGE=en

# Performance Configuration (optional)
REACT_APP_CACHE_DURATION=300000
REACT_APP_MAX_RETRIES=3
